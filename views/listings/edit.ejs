<% layout("/layouts/boilerplate") %>
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
        
            <div class="text-center mb-2">
                <h2 class="fw-bold text-dark">Post Details</h2>
                <p class="text-muted">See the full post and manage it securely</p>
            </div>

            <div class="card border-0 shadow-sm "  style="background: linear-gradient(135deg, #f5f7fa, #c3cfe2);">
                <div class="card-body p-3 ">
                    <div class="mb-3">
                        <h6 class="text-uppercase text-secondary mb-1" style="color: #000000 !important;">Post ID</h6>
                        <p class="fw-bold text-primary"><%= post.id %></p>
                    </div>
                    <div class="mb-3">
                        <h6 class="text-uppercase text-secondary mb-1" style="color: #000000 !important;">Username</h6>
                        <p class="fw-bold fs-5 text-primary">@<%= post.username %></p>
                    </div>
                    <div class="mb-3 text-center">
                        <textarea name="content" class="form-control" rows="10"> <%=post.content%></textarea>
                    </div>
                    <div class="btns" >
                        <form method="post" action="/posts/<%=post.id%>?_method=PATCH">
                            <button class="btn btn-primary offset-5">Submit</button>
                        </form>
                        <form method="post" action="/posts/<%=post.id%>?_method=DELETE">
                            <button class="btn btn-dark offset-7">Delete</button>
                        </form>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>

