<% layout("/layouts/boilerplate") %>

<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      
      <div class="text-center mb-2">
        <h2 class="fw-bold text-dark">Post Details</h2>
        <p class="text-muted">See the full post and manage it securely</p>
      </div>

      <div class="card border-0 shadow-sm"  style="background: linear-gradient(135deg, #f5f7fa, #c3cfe2);">
        <div class="card-body p-3">
          <div class="mb-3">
            <h6 class="text-uppercase text-secondary mb-1" style="color: #000000 !important;">Post ID</h6>
            <p class="fw-bold text-primary"><%= post.id %></p>
          </div>

          <div class="mb-3">
            <h6 class="text-uppercase text-secondary mb-1" style="color: #000000 !important;">Username</h6>
            <p class="fw-bold fs-5 text-primary">@<%= post.username %></p>
          </div>

          <div class="mb-3">
            <h6 class="text-uppercase text-secondary mb-1">Content</h6>
            <p class="text-muted" style="color: #000000 !important;"><%= post.content %></p>
          </div>

          <form action="/posts/<%= post.id %>/pass" method="get">
            <button class="btn btn-outline-primary col-4 offset-4 mb-3">
              Proceed to Edit/Delete
            </button>
          </form>
        </div>
      </div>

      <div class="text-center mt-4">
        <a href="/posts" class="btn btn-light border">‚Üê Back to All Posts</a>
      </div>

    </div>
  </div>
</div>


    
    